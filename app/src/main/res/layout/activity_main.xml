<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/playerChoice"
        android:layout_width="215dp"
        android:layout_height="225dp"
        android:layout_above="@+id/playerHP"
        android:layout_alignStart="@+id/moveTwo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="168dp"
        android:contentDescription="@string/player_move"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/moveOne"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/player_grab" />

    <Button
        android:id="@+id/moveOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:layout_toEndOf="@+id/moveTwo"
        android:text="@string/moveOne"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.988"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerHP"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/moveTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="80dp"
        android:text="@string/moveTwo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/moveOne"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerHP"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/opponentMove"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_above="@+id/opponentChoice"
        android:layout_toStartOf="@+id/plyrHpLabel"
        android:text="@string/opponent_move"
        app:layout_constraintBottom_toTopOf="@+id/moveResult"
        app:layout_constraintEnd_toEndOf="@+id/moveResult"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toEndOf="@+id/opponentChoice"
        app:layout_constraintTop_toBottomOf="@+id/oppHpLabel" />

    <TextView
        android:id="@+id/oppHpLabel"
        android:layout_width="86dp"
        android:layout_height="19dp"
        android:layout_above="@+id/opponentChoice"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:text="@string/opponent_hp"
        app:layout_constraintBottom_toTopOf="@+id/opponentChoice"
        app:layout_constraintEnd_toEndOf="@+id/opponentMove"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/opponentChoice"
        app:layout_constraintTop_toTopOf="@+id/opponentHP" />

    <ProgressBar
        android:id="@+id/playerHP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="307dp"
        android:layout_height="56dp"
        android:layout_alignEnd="@+id/moveOne"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/moveOne"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/moveTwo"
        app:layout_constraintTop_toBottomOf="@+id/playerChoice" />

    <ProgressBar
        android:id="@+id/opponentHP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="294dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@+id/opponentChoice"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/playerChoice"
        app:layout_constraintEnd_toEndOf="@+id/playerChoice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/opponentChoice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/moveResult"
        android:layout_width="303dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toTopOf="@+id/playerChoice"
        app:layout_constraintEnd_toEndOf="@+id/playerChoice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/playerMove"
        app:layout_constraintTop_toBottomOf="@+id/opponentChoice" />

    <ImageView
        android:id="@+id/opponentChoice"
        android:layout_width="199dp"
        android:layout_height="204dp"
        android:layout_alignEnd="@+id/playerChoice"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/opponent_move"
        app:layout_constraintBottom_toTopOf="@+id/playerChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/moveResult"
        app:layout_constraintTop_toBottomOf="@+id/opponentHP"
        app:layout_constraintVertical_bias="0.326"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/opponent_dodge" />

    <TextView
        android:id="@+id/playerMove"
        android:layout_width="87dp"
        android:layout_height="24dp"
        android:layout_above="@+id/plyrHpLabel"
        android:layout_alignTop="@+id/playerChoice"
        android:layout_toStartOf="@+id/playerChoice"
        android:text="@string/player_move"
        app:layout_constraintBottom_toTopOf="@+id/plyrHpLabel"
        app:layout_constraintEnd_toStartOf="@+id/playerChoice"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/plyrHpLabel"
        app:layout_constraintTop_toTopOf="@+id/playerChoice"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/plyrHpLabel"
        android:layout_width="80dp"
        android:layout_height="23dp"
        android:layout_above="@+id/playerHP"
        android:layout_alignStart="@+id/moveTwo"
        android:layout_marginBottom="32dp"
        android:layout_toStartOf="@+id/playerHP"
        android:text="@string/player_hp"
        app:layout_constraintBottom_toBottomOf="@+id/playerHP"
        app:layout_constraintEnd_toStartOf="@+id/playerChoice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/playerHP"
        app:layout_constraintTop_toBottomOf="@+id/playerChoice" />

</androidx.constraintlayout.widget.ConstraintLayout>