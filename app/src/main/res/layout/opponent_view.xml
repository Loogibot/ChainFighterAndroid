<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ProgressBar
        android:id="@+id/opponentHPBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@color/teal_200"
        android:max="200" />

    <TextView
        android:id="@+id/oppHpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aclonica"
        android:padding="5dp"
        android:text="@string/opponent_hp"
        android:textColor="@color/teal_700" />


    <LinearLayout
        android:id="@+id/PChainImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="0">

        <ImageView
            android:id="@+id/OFirstMoveImg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:contentDescription="@string/opponent_chain" />

        <ImageView
            android:id="@+id/OSecondMoveImg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:contentDescription="@string/opponent_chain" />

        <ImageView
            android:id="@+id/OThirdMoveImg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:contentDescription="@string/opponent_chain" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/PChainTitles"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="0">

        <TextView
            android:id="@+id/OFirstMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/teal_400"
            android:fontFamily="@font/aclonica"
            android:padding="3dp"
            android:text="@string/opponent_s_first_move"
            android:textColor="@color/teal_50" />

        <TextView
            android:id="@+id/OSecondMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@color/teal_400"
            android:fontFamily="@font/aclonica"
            android:padding="3dp"
            android:text="@string/opponent_s_second_move"
            android:textColor="@color/teal_50" />

        <TextView
            android:id="@+id/OThirdMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@color/teal_400"
            android:fontFamily="@font/aclonica"
            android:padding="3dp"
            android:text="@string/opponent_s_third_move"
            android:textColor="@color/teal_50" />

    </LinearLayout>

    <TextView
        android:id="@+id/opponentMove"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:fontFamily="@font/aclonica"
        android:text="@string/opponent_chain"
        android:textColor="@color/teal_700"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/move_details"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="end"
        android:fontFamily="@font/aclonica"
        android:text="@string/move_detail"
        android:textColor="@color/teal_700"
        android:textSize="18sp" />

</GridLayout>