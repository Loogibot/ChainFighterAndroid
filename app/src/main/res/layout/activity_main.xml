<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_50"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:context=".MainActivity">

    <!-- input -->
    <Button
        android:id="@+id/kickButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:text="@string/moveOne"
        android:textColor="@color/teal_200"
        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

    <Button
        android:id="@+id/punchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="@string/moveTwo"
        android:textColor="@color/teal_200"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/grabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="@string/moveTwo"
        android:textColor="@color/teal_200"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/dodgeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="@string/moveTwo"
        android:textColor="@color/teal_200"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/shieldButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:text="@string/moveTwo"
        android:textColor="@color/teal_200"
        tools:ignore="TextContrastCheck" />

    <!-- moves -->
    <ImageView
        android:id="@+id/opponentChoice"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="bottom"
        android:contentDescription="@string/opponent_move" />

    <ImageView
        android:id="@+id/playerChoice"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="top"
        android:contentDescription="@string/player_move"
        tools:srcCompat="@drawable/player_grab" />

    <!-- hp -->
    <ProgressBar
        android:id="@+id/opponentHP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="top"
        android:background="@color/teal_200" />

    <ProgressBar
        android:id="@+id/playerHP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="bottom"
        android:background="@color/teal_200" />

    <!-- labels -->
    <TextView
        android:id="@+id/moveResult"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:text="@string/result"
        android:textColor="@color/teal_700" />

    <TextView
        android:id="@+id/plyrHpLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="start"
        android:fontFamily="@font/aclonica"
        android:text="@string/player_hp"
        android:textColor="@color/teal_700" />

    <TextView
        android:id="@+id/playerMove"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aclonica"
        android:text="@string/player_move"
        android:textColor="@color/teal_700" />

    <TextView
        android:id="@+id/oppHpLabel"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="start"
        android:fontFamily="@font/aclonica"
        android:text="@string/opponent_hp"
        android:textColor="@color/teal_700" />

    <TextView
        android:id="@+id/opponentMove"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aclonica"
        android:text="@string/opponent_move"
        android:textColor="@color/teal_700" />

</GridLayout>