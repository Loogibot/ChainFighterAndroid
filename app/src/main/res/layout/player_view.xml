<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="240dp"
    android:maxHeight="300dp"
    android:layout_margin="3dp">

    <!-- move images -->
    <LinearLayout
        android:id="@+id/PChainImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="0">

        <ImageView
            android:id="@+id/PFirstMoveImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hi_green_back"
            android:contentDescription="@string/player_chain"
            android:paddingTop="60dp" />

        <ImageView
            android:id="@+id/PSecondMoveImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/yellow_back"
            android:contentDescription="@string/player_chain"
            android:paddingTop="60dp" />

        <ImageView
            android:id="@+id/PThirdMoveImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/red_back"
            android:contentDescription="@string/player_chain"
            android:paddingTop="60dp" />

    </LinearLayout>

    <!-- move texts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@drawable/flo_blue_back"
        android:gravity="center">

        <TextView
            android:id="@+id/PFirstMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/box_1"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/player_s_first_move"
            android:textColor="@color/hi_yellow"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/PSecondMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/box_2"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/player_s_second_move"
            android:textColor="@color/hi_yellow"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/PThirdMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/box_3"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/player_s_third_move"
            android:textColor="@color/hi_yellow"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/player_chain_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/player_chain"
        android:textColor="@color/text_color_light"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/playerHPBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="6dp"
        android:background="@drawable/yellow_back"
        android:max="200"
        android:maxHeight="80dp"
        android:minHeight="40dp" />

    <TextView
        android:id="@+id/playerHPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/player_hp"
        android:textColor="@color/text_color"
        android:textSize="20sp" />

</GridLayout>