<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc,
    this creates gradient style
    -->
    <item>
        <shape>
            <gradient
                android:angle="100"
                android:endColor="@color/hi_pink"
                android:startColor="@color/flo_blue"
                android:useLevel="false" />
            <corners android:radius="12dp" />
            <stroke
                android:width="3dp"
                android:color="@color/flo_blue" />
        </shape>
    </item>

</layer-list>