<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/opponentHPBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/yellow_back"
        android:max="200" />

    <TextView
        android:id="@+id/oppHpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aclonica"
        android:padding="3dp"
        android:text="@string/opponent_hp"
        android:textColor="@color/flo_blue" />

    <!-- move images -->
    <LinearLayout
        android:id="@+id/PChainImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="0">

        <ImageView
            android:id="@+id/OFirstMoveImg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/red_box"
            android:contentDescription="@string/opponent_chain"
            android:maxHeight="200dp"
            android:minHeight="70dp"
            android:paddingTop="60dp" />

        <ImageView
            android:id="@+id/OSecondMoveImg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@drawable/yellow_box"
            android:contentDescription="@string/opponent_chain"
            android:maxHeight="200dp"
            android:minHeight="70dp"
            android:paddingTop="60dp" />

        <ImageView
            android:id="@+id/OThirdMoveImg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/hi_green_box"
            android:contentDescription="@string/opponent_chain"
            android:maxHeight="200dp"
            android:minHeight="70dp"
            android:paddingTop="60dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PChainTitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginBottom="5dp"
        android:background="@drawable/red_back_2"
        android:gravity="center">

        <TextView
            android:id="@+id/OFirstMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/opponent_s_first_move"
            android:textColor="@color/hi_blue" />

        <TextView
            android:id="@+id/OSecondMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/opponent_s_second_move"
            android:textColor="@color/hi_blue" />

        <TextView
            android:id="@+id/OThirdMoveTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/opponent_s_third_move"
            android:textColor="@color/hi_blue" />

    </LinearLayout>

    <TextView
        android:id="@+id/opponentMove"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:fontFamily="@font/aclonica"
        android:text="@string/opponent_chain"
        android:textColor="@color/flo_blue"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/move_details"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="end"
        android:fontFamily="@font/aclonica"
        android:gravity="end"
        android:text="@string/move_detail"
        android:textColor="@color/flo_blue"
        android:textSize="16sp" />

</GridLayout>