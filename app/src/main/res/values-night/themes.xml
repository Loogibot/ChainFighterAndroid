<resources>
    <!-- Dark/Night application theme. -->
    <style name="Theme.ChainFighter" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hi_green</item>
        <item name="colorPrimaryVariant">@color/flo_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/flo_orange</item>
        <item name="colorSecondaryVariant">@color/flo_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/flo_green</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- on below line creating a theme for our Alert Dialog -->
    <style name="AlertDialogCustom" parent="@style/Theme.AppCompat.Dialog">
        <!-- on below line adding text color for our text in alert dialog -->
        <item name="android:textColor">@color/flo_blue</item>
        <!-- on below line adding typeface for alert dialog text -->
        <item name="android:typeface">sans</item>
        <!-- on below line setting text size for text -->
        <item name="android:textSize">200sp</item>
    </style>

</resources>