<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/red_back_2"
    android:padding="3dp"
    android:layout_margin="3dp"
    android:gravity="center">

    <Button
        android:id="@+id/punchButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/yellow_box"
        android:fontFamily="@font/aclonica"
        android:padding="5dp"
        android:text="@string/punch"
        android:textColor="@color/hi_green"
        android:textSize="12sp" />

    <Button
        android:id="@+id/kickButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/red_box"
        android:fontFamily="@font/aclonica"
        android:padding="5dp"
        android:text="@string/kick"
        android:textColor="@color/hi_green"
        android:textSize="12sp" />

    <Button
        android:id="@+id/dodgeButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/flo_green_box"
        android:fontFamily="@font/aclonica"
        android:padding="5dp"
        android:text="@string/dodge"
        android:textColor="@color/hi_green"
        android:textSize="12sp" />

    <Button
        android:id="@+id/grabButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/hi_green_box"
        android:fontFamily="@font/aclonica"
        android:padding="5dp"
        android:text="@string/grab"
        android:textColor="@color/hi_green"
        android:textSize="12sp" />

    <Button
        android:id="@+id/shieldButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/yellow_box"
        android:fontFamily="@font/aclonica"
        android:padding="5dp"
        android:text="@string/shield"
        android:textColor="@color/hi_green"
        android:textSize="12sp" />
</LinearLayout>