<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_50"
    android:padding="5dp"
    tools:context=".MainActivity">

    <!-- input -->

    <TextView
        android:id="@+id/move_details"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_gravity="start"
        android:fontFamily="@font/aclonica"
        android:text="@string/move_detail"
        android:textColor="@color/teal_700"
        android:textSize="18sp" />

    <Button
        android:id="@+id/punchButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:fontFamily="@font/aclonica"
        android:text="@string/punch"
        android:textColor="@color/teal_200" />

    <Button
        android:id="@+id/kickButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:fontFamily="@font/aclonica"
        android:text="@string/kick"
        android:textColor="@color/teal_200" />

    <Button
        android:id="@+id/dodgeButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:fontFamily="@font/aclonica"
        android:text="@string/dodge"
        android:textColor="@color/teal_200" />

    <Button
        android:id="@+id/grabButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:fontFamily="@font/aclonica"
        android:text="@string/grab"
        android:textColor="@color/teal_200" />

    <Button
        android:id="@+id/shieldButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:fontFamily="@font/aclonica"
        android:text="@string/shield"
        android:textColor="@color/teal_200" />

    <ImageView
        android:id="@+id/opponentChoice"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="end"
        android:contentDescription="@string/opponent_move" />

    <!-- labels -->

    <ImageView
        android:id="@+id/playerChoice"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="start"
        android:contentDescription="@string/player_move"
        tools:srcCompat="@drawable/player_grab" />

    <ProgressBar
        android:id="@+id/opponentHP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="start"
        android:max="200"
        android:background="@color/teal_200" />

    <ProgressBar
        android:id="@+id/playerHP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="start"
        android:max="200"
        android:background="@color/teal_200" />

    <TextView
        android:id="@+id/moveResult"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="start"
        android:fontFamily="@font/aclonica"
        android:text="@string/result"
        android:textColor="@color/teal_700"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/plyrHpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aclonica"
        android:padding="5dp"
        android:text="@string/player_hp"
        android:textColor="@color/teal_700" />

    <TextView
        android:id="@+id/playerMove"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="top"
        android:fontFamily="@font/aclonica"
        android:text="@string/player_move"
        android:textColor="@color/teal_700" />

    <TextView
        android:id="@+id/oppHpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aclonica"
        android:padding="5dp"
        android:text="@string/opponent_hp"
        android:textColor="@color/teal_700" />

    <TextView
        android:id="@+id/opponentMove"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="end"
        android:fontFamily="@font/aclonica"
        android:text="@string/opponent_move"
        android:textColor="@color/teal_700" />

</GridLayout>